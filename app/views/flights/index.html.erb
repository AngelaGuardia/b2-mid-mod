<h1>All Flights</h1>

<% @flights.each do |flight| %>
  <ul id=<%= "flight-#{flight.id}" %>>
    <li>Flight Number: <%= flight.number %></li>
    <li>Passengers:</li>
    <% flight.passengers.each do |passenger| %>
      <li id=<%= "passenger-#{passenger.id}"%>><%= passenger.name %> <%= link_to "Remove", "/tickets/#{passenger.get_ticket(flight)}", method: :delete %></li>
    <% end %>
  </ul>
<% end %>
